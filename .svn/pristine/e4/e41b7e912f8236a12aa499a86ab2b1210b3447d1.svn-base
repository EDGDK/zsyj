*{margin:0;border:0;padding:0;}
ul{list-style:none;}
a{text-align:none;}
a{text-decoration:none;outline:none;}
a,img{border:0;}
@font-face{ font-family:"微软雅黑";  
	    src:url(../font/%E5%BE%AE%E8%BD%AF%E9%9B%85%E9%BB%91Light_1.0.ttc);
}
.content{width:100%;min-width:1200px;height:100%;margin:0 auto;background:#f9f9f9;border-top:#dfdfe3 1px solid;float:left;}
.content_top{width:1000px;height:100%;margin:0 auto;}
.content_nav{width:242px;height:20px;margin-top:110px;color:#d877d8;}
.content_nav span{padding-left:8px;padding-right:8px;}
.content_nav a{color:#d877d8;font-size:14px;}
.content_nav a:hover{color:#ff33ff;}
.content_right img{float:right;margin-right:10.48%;margin-top:-105px;}
.content_line{ border-bottom:1px solid #9e4897;width:1000px;margin:0 auto;margin-top:5px;}
.big{width:1000px;height:540px;margin:0 auto;}
.aside{width:172px;height:440px;background:#fff;margin-top:25px;float:left;}
.aside_title{font-size:18px;padding-top:27px;margin-left:32px;}
.aside ul{width:70px;height:240px;margin-left:50px;margin-top:32px;}
.aside ul li{line-height:55px;font-size:14px;}
.aside ul li a.now{color:#ff24cf;}
.aside ul li a{color:#333333;}
.aside ul li a:hover{color:#ff24cf;}