

function alertTip(tips,tag){

    $(function() {
        var main = $('<div></div>'); //创建一个父DIV
        main.attr('id', 'popup_parent'); //给父DIV设置ID
        main.addClass('main'); //添加CSS样式
        main.css({
            'background':'rgba(0, 0, 0, 0.3)',
            'width':'100%',
            'height':'100%',
            'position':'absolute',
            'top':'0',
            'clear':'both',
            'position':'fixed',
        });
        var oneStr = '';
       oneStr = '<div>' +
           '<div style="width : 390px;height:40px;border:#666 1px solid;text-align:center;line-height:40px;background-color: #f7c1ff;">提示</div>' +
           '<div style="width:390px;height:160px;border:#666 1px solid;background:#fff;text-align:center;line-height:100px;">'+tips+'</div>' +
           '<img src="images/home/images_Home/sigh_ok.png" style="position:absolute;top:38%;left:10%;z-index:20;">';
        if(tag){
            oneStr += '<button id="popup_ok" style="width:70px;height:30px;margin-left:280px;position:absolute;top:80%;background:#f7c1ff;border:#b9b9b9 2px solid;cursor:pointer;">确认</button>';
        }else{
            oneStr +=  '<button id="popup_ok" style="width:70px;height:30px;margin-left:200px;position:absolute;top:80%;background:#f7c1ff;border:#b9b9b9 2px solid;cursor:pointer;">确认</button>' +
                '<button id="popup_cancel" style="width:70px;height:30px;margin-left:280px;position:absolute;top:80%;background:#f7c1ff;border:#b9b9b9 2px solid;cursor:pointer;">取消</button>'; //创建一个子DIV
        }

        oneStr += '</div>';
        var one = $(oneStr);
        one.attr('id', 'popup_one'); //给子DIV设置ID
        one.removeClass();
        one.css({
            'margin' : '0 auto',
            'padding' : '0',
            'width' : '390px',
            'height' : '200px',
            'position':'absolute',
            'top':'40%',
            'left':'35%',
            'z-index':'20',
        });
        one.appendTo(main);
        main.appendTo('body'); //将父DIV添加到BODY中
        $('#popup_ok').click(function(){
            $('#popup_parent').remove();
        });
        $('#popup_cancel').click(function(){
            $('#popup_parent').remove();
        });
    });
};



