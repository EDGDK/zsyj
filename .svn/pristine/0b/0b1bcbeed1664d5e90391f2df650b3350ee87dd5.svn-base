.right{position:fixed;width:60px;height:200px;right:0px;top:60%;z-index:100;}
.right ul li{width:50px;height:50px;float:left;position:relative;margin-top:5px;list-style-type:none;}
.right ul li .sidebox1{background:url(../../images/home/right_suspend/icon_TO_top_after.png);position:absolute;width:50px;height:50px;top:0;right:0;transition:all 0.3s;overflow:hidden;}
.right ul li .sidebox2{background:url(../../images/home/right_suspend/icon_shop_after.png);position:absolute;width:50px;height:50px;top:0;right:0;transition:all 0.3s;overflow:hidden;}
.right ul li .sidebox1:hover{background:url(../../images/home/right_suspend/icon_TO_top.png)}
.right ul li .sidebox2:hover{background:url(../../images/home/right_suspend/icon_shop.png)}

.send{display:block;width:80px;height:60px;margin-top:40px; background:#3fc19c; width:60px;height:40px;line-height:40px; border:none; border-radius:8px;-moz-border-radius: 8px;-webkit-border-radius: 8px; border-bottom:2px solid #35aa89; color:#FFF; font-size:14px; padding:0 20px; cursor:pointer;} 
.send:hover{ background-color:#52d7b1; border-bottom:#42c09c 2px solid; color:#FFF;}


