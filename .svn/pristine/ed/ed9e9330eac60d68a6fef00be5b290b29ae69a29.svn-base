/*header*/


.header_nav{min-width:1000px; width:100%;margin:0 auto;position: relative;}
.logo{float:left;}
.nav{float:left;font-weight:900; width: auto;}
.nav ul{ padding-left:45px;margin-right:0px;}
.nav ul li{ float:left; display:inline; margin-right:25px; line-height:50px; height:50px; padding-top:7px;}
.nav ul li a{ color:#2d2b2b; font-size:16px; display:inline-block; white-space:nowrap;}
.nav ul li a:hover{ border-bottom:1px solid #cc00cc; color:#cc00cc;}
.nav ul li a.on {border-bottom: 1px solid #cc00cc;color: #cc00cc;}
.xiala{width:100px;height:auto;border:#dcdcdc 1px solid;text-align:center;position:absolute;left:-20px;display:none;background:#fff;z-index: 9999;}
.xiala a{height:34px;line-height:34px;color:#8a8a8a!important;}
.xiala a:hover{color:#cc00cc!important;}

.header_login{width:355px;height:58px;margin-left:0px; font-size:14px; position:absolute;right: 0px; }

.people_login{ color:#2d2b2b; margin:0 15px;line-height:61px;float:left;cursor:pointer;}
.people_login:hover{ color:#ff33ff;}
.header_login span{float:left;line-height:61px;}
.company_login{width:160px; height:42px;margin-left:10px; background-color:#3fc19c; color:#fff; text-align:center; float:left; border:1px solid #DDEEF6; border-radius: 5px; }
.company_login a{color:#fff;line-height:42px;text-align:center;}


.header_login_in{width:400px;height:58px;margin-left:0px; font-size:14px; position:absolute;right: 0px;}
.header_login_in span{float:left;line-height:61px;}
.header_login_in a{font-size:14px;}
.company_login_in{cursor:pointer;width:160px; height:42px;   text-align:center; border-radius:5px;float:left;background:url(../../../images/home/images_Home/car_buy.jpg);}
.company_login_in a{color:#fff;line-height:42px;text-align:center;}
.company_login_in:hover{background:url(../../../images/home/images_Home/car_buyhover.jpg);}/*footer*/

.cart_num{display: block;width:50px;height:30px;border-radius: 2px;color:#fff;font-size:20px;margin-left: 10px;margin-top: -24px;}