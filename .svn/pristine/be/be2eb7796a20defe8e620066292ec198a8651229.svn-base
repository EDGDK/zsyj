
img{ border:0; vertical-align:bottom;margin:0;padding:0;}
br{height:10px;}

/*body*/
.banner{margin-top:0px;max-width:1200px;min-width:1000px;margin:0 auto;}
.big{width:100%;margin:0 auto;margin-bottom:0px;max-width:1210px;}
/*轮播*/
#outer{width:auto;height:400px;margin:50px auto;position:relative;overflow:hidden;background:#eee;box-shadow:10px 5px 15px #ccc;border-radius:5px;border:1px solid #ccc;}
#inner{display:block;width:4840px;height:400px;position:absolute;left:0;top:0;}
#inner li{display:block;width:1210px;height:400px;float:left;font-size:72px;line-height:400px;text-align:center;content:#666;text-shadow:3px 3px 2px #999,5px 5px 2px #ccc;background:#eee;}
#nav{width:200px;height:40px;padding-left:602px;padding-bottom:10px;position:absolute;bottom:0;left:0;opacity:0.8;filter:alpha(opacity=80);}
#nav em{display:block;float:left;width:24px;height:24px;margin-right:8px;margin-top:8px;line-height:24px;text-align:center;font-size:14px;color:#333;font-style:normal;font-family:Arial;background:#eee;border-radius:12px;cursor:pointer;}
#nav .ehover{background:#cc33cc;color:#fff;}


.content{margin:0 auto;background:#eeeeee;min-width:1000px;width:100%;margin-bottom:0px;}
.all_commodity{font-family:"Microsoft YaHei UI";color:#666666;font-size:25px;width:100%;height:120px;margin:0 auto 0 auto;}
.all_commodity a{line-height:120px;}
.all_commodity_line{width:100%;height:0;border-top:solid 1px #999999;margin:0 auto;margin-top:-43px; }
.commodity_first{width:100%;max-width:1100px;height:340px;margin:0 auto;margin-top:45px;background:#ffffff;}
.commodity_first_small{width:auto;height:300px;margin:0 auto;padding:20px;min-width:960px;}
.commodity_first_small_img{width:40%;max-width:320px;height:300px;float:left;}
.commodity_first_small li{float:left;}
.commodity_first_small_middle{margin-left:40px;width:211px;height:300px;float:left;}
.commodity_first_small_middle p{font-size:26px;font-family:'黑体';}
.Promotion{margin-top:30px;font-family:'微软雅黑';height:30px;}
.Promotion_price{font-size:16px;height:30px;line-height:30px;}
.price{font-size:22px;color:#ff0000;margin-left:24px; }
.Present_price{font-size:16px;color:#a7a7a7;margin-left:24px;height:30px;line-height:30px;}
.Promotion_middle{height:30px;font-family:'微软雅黑';}
.Specifications{font-size:16px;height:30px;line-height:30px;letter-spacing:13px;}
.bottle{font-size:16px;height:30px;line-height:30px;margin-left:18px;}
.Promotion_last{height:30px;font-family:'微软雅黑';}
.number{margin-top:30px;height:30px;}
.number_li{font-family:'微软雅黑';font-size:16px;letter-spacing:13px;}
.number_plus{margin-left:18px;}
.buy_buycar{margin-top:33px;}
.buy_rightnow {background:url(../../images/home/images_mall/buy.png);width:94px;height:34px;}
.buy_rightnow:hover{background:url(../../images/home/images_mall/buy_after.png);}
.buy_car{background:url(../../images/home/images_mall/shoppingcart.png);width:94px;height:34px;margin-left:20px;cursor:pointer;}
.buy_car:hover{background:url(../../images/home/images_mall/shoppingcart__after.png);}
.commodity_first_small_right{float:right;width:40%;max-width:460px;overflow: hidden;height:300px;}
.img_size1 img{width:160px;height:150px;}




/*数量加减*/
.num{width:45px;text-align:center;
    height: 23px;
    line-height: 15px;
    border: 1px solid #959494;
    color: #959494;
    padding-top:2px;

    background-color: #fff;}
.plus{height: 23px;cursor: pointer;
    width: 23px;
    border: 1px solid #959494;
    background: #fff;
    text-align: center;
    line-height: 23px;
    color: #959494;

    -moz-user-select:none;/*火狐*/ -webkit-user-select:none;/*webkit浏览器*/-ms-user-select:none;/*IE10*/ -khtml-user-select:none;/*早期浏览器*/ user-select:none;}
.number_plus button:hover{border-color:#f50;color:#f50;}

.minus{height: 23px;cursor: pointer;
    width: 23px;
    border: 1px solid #959494;
    background: #fff;
    text-align: center;
    line-height: 23px;
    color: #959494;

    -moz-user-select:none;/*火狐*/ -webkit-user-select:none;/*webkit浏览器*/-ms-user-select:none;/*IE10*/ -khtml-user-select:none;/*早期浏览器*/ user-select:none;}
.fly_item{
    display: block;
    width: 50px;
    height: 50px;
    border-radius: 50px;
    overflow: hidden;
    position: absolute;
    visibility: hidden;
}