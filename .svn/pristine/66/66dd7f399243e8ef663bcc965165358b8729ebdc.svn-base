$(document).ready(function(){
    $(".buy_car").click(function(){
        var num=parseInt($("#count").text());
        num++;
        if(num>=1){
            $("#count").css("display","block");
        }else{
            $("#count").css("display","none");
        }
        $("#count").text(num);
    });
    //数量加减
    $(".plus").click(function(){
        var n=$('.num').val();
        var num=parseInt(n)+1;
        if(num=='0');
        $('.num').val(num);
    })
    $('.minus').click(function(){
        var n=$('.num').val();
        var num=parseInt(n)-1;
        if(num=='0')return;
        $('.num').val(num);
    })
