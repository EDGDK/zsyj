
*{margin:0;padding:0;}	
ul{list-style:none;}	
a{text-decoration:none;}
img{ border:0; vertical-align:bottom;}
/*header*/	
#header{ height:58px; background-color:#fff; border-bottom:1px solid #dfdfe3; padding-top:10px; font-family:'黑体';margin:0 auto;/*position:fixed;top:0;width:100%;z-index:99;固定*/}

.header_nav{ width:1200px;margin:0 auto;}
.logo{float:left;}
.nav{float:left;font-weight:900;}
.nav ul{ padding-left:65px;margin-right:50px;}
.nav ul li{ float:left; display:inline; margin-right:33px; line-height:50px; height:50px; padding-top:7px;}
.nav ul li a{ color:#2d2b2b; font-size:16px; display:inline-block; white-space:nowrap;}
.nav ul li a:hover{ border-bottom:1px solid #cc00cc; color:#cc00cc;}
.nav ul li a.on {border-bottom: 1px solid #cc00cc;color: #cc00cc;}
.xiala{width:100px;height:150px;border:#dcdcdc 1px solid;text-align:center;position:absolute;left:-20px;display:none;background:#fff;}
.xiala a{height:34px;line-height:34px;color:#8a8a8a!important;}
.xiala a:hover{color:#cc00cc!important;;}
.header_login{width:400px;height:58px;float:left;margin-left:0px; font-size:14px; }
.people_login{ color:#2d2b2b; margin:0 15px;line-height:61px;float:left;}
.people_login:hover{ color:#ff33ff;}
.header_login span{float:left;line-height:61px;}
.company_login{width:160px; height:42px;margin-left:10px; background-color:#3fc19c; color:#fff; text-align:center; float:left; border:1px solid #DDEEF6; border-radius: 5px; }
.company_login a{color:#fff;line-height:42px;text-align:center;}
/*footer*/
#header,#footer,#content{min-width:1200px;}
.footer_bg{position: relative;width: 100%;height:490px;overflow: hidden;}
.footer_bg_img{position: absolute;left: 50%;}
.footer_bg_img img{  width: 1920px; margin-left: -50%;}
.footer_content{width:821px;height:420px;margin:0 auto;;font-family:'微软雅黑';}
.footer_content_logo{float:left;}
.footer_content_big{position:relative;width:1200px!important;margin:0 auto;}
.footer_content ul{float:left;margin-left:127px;}
.about{font-size:20px;font-weight:900;color:#fff;margin-bottom:37px;}
.who a{font-size:16px;color:#fff;}
.footer_content ul li.who a:hover{color:#ff00ff;}
.who{margin-bottom:16px;}
.footer_content_line{width:821px; height:2px;border-top:2px solid #fff;float:left;margin-top:15px;}
.footer_content p{font-size:20px;font-weight:900;color:#fff;float:left;margin:0 auto;width:821px;height:78px;line-height:78px;text-align:center;}
.sina{float:left;margin-left:310px;background:url(../../images/home/images_Home/sina.png);width:47px;height:48px;}
.sina:hover{background:url(../../images/home/images_Home/sinacolor.png);}
.weixin{float:left;margin-left:110px;width:48px;height:47px;position:relative;background:url(../../images/home/images_Home/weixin.png);}
.weixin:hover{background:url(../../images/home/images_Home/weixincolor.png);}
.footer_content_text{float:left;width:821px;text-align:center;margin-top:38px;color:#fff;}
.footer_content span{float:left;position:relative;left:700px;bottom:25px;}

