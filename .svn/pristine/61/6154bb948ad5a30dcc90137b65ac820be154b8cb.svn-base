*{margin:0;padding:0;}
ul{list-style:none;}
a{text-decoration:none;}
img{ border:0; vertical-align:bottom;}
@font-face{font-family:"微软雅黑";
    src:url(../../../css/home/Yahei.ttc);}
/*header*/
.header{width:100%;min-width:1000px;height:58px; background-color:#fff; border-bottom:1px solid #dfdfe3; padding-top:10px; margin:0 auto;font-family:"微软雅黑";}
.header_nav{ width:100%;min-width:1000px;margin:0 auto;position:relative;}
.logo{float:left;margin-left:2%;}
.nav{float:left;font-weight:900;width:auto;}
.nav ul{ padding-left:50px;}
.nav ul li{ float:left; display:inline; margin-right:23px; line-height:50px; height:50px; padding-top:7px;}
.nav ul li a{ color:#2d2b2b; font-size:16px; display:inline-block; white-space:nowrap; font-family:'黑体'!important;}
.nav ul li a:hover{ border-bottom:1px solid #cc00cc; color:#cc00cc;}
.nav ul li a.on {border-bottom: 1px solid #cc00cc;color: #cc00cc;}

.xiala{width:100px;height:150px;border:#dcdcdc 1px solid;text-align:center;position:absolute;left:-20px;display:none;background:#fff;}
.xiala a{height:34px;line-height:34px;color:#8a8a8a!important;}
.xiala a:hover{color:#cc00cc!important;;}

.header_login{width:400px;height:58px;margin-left:0px; font-size:14px; position:absolute;right: 0px;}
.header_login span{float:left;line-height:61px;}
.header_login a{font-size:14px;}
.people_login{ color:#2d2b2b; margin:0 15px;line-height:61px;float:left;}
.people_login:hover{color:#ff33ff; }
.company_login{width:160px; height:42px;   text-align:center; border-radius:5px;float:left;background:url(../../../images/home/images_Home/car_buy.jpg);}
.company_login a{color:#fff;line-height:42px;text-align:center;}
.company_login:hover{background:url(../../../images/home/images_Home/car_buyhover.jpg);}/*footer*/
